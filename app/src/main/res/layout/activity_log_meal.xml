<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Log_Meal">

    <TextView
        android:id="@+id/lblMealTitle_LM"
        android:layout_width="130dp"
        android:layout_height="34dp"
        android:layout_marginTop="44dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtFoods_LM"
        android:layout_width="215dp"
        android:layout_height="42dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblMealTitle_LM" />

    <Button
        android:id="@+id/button"
        android:layout_width="65dp"
        android:layout_height="44dp"
        android:layout_marginTop="84dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintStart_toEndOf="@+id/txtFoods_LM"
        app:layout_constraintTop_toBottomOf="@+id/lblMealTitle_LM" />

    <Spinner
        android:id="@+id/spinPrevFoods_LM"
        android:layout_width="295dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listView" />

    <Button
        android:id="@+id/btnLog_LM"
        android:layout_width="159dp"
        android:layout_height="40dp"
        android:layout_marginTop="112dp"
        android:text="Log Food"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinPrevFoods_LM" />

    <Button
        android:id="@+id/btnCreateMeal_LM"
        android:layout_width="162dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:text="Create Meal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLog_LM"
        app:layout_constraintVertical_bias="0.06" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="294dp"
        android:layout_height="196dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFoods_LM" />
</androidx.constraintlayout.widget.ConstraintLayout>