<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exercise.Log_Exercise">

    <TextView
        android:id="@+id/lblCurrentExercise_LE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listSets_LE"
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.422" />

    <Button
        android:id="@+id/btnEditSet_LE"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="#004863F8"
        android:text="@string/edit_sets"
        android:textColor="#4863F8"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAddSet_LE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.706" />

    <Button
        android:id="@+id/btnAddSet_LE"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#004863F8"
        android:text="@string/add_set"
        android:textColor="#4863F8"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnEditSet_LE"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.706" />


    <Button
        android:id="@+id/btnRestTimer_LE"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="#4863F8"
        android:text="@string/rest_timer"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnLogSet_LE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <Button
        android:id="@+id/btnLogSet_LE"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#004863F8"
        android:text="@string/log_set"
        android:textColor="#4863F8"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnRestTimer_LE"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.952"
        app:strokeColor="#4863F8"
        app:strokeWidth="1dp" />

    <ImageView
        android:id="@+id/backback"
        android:layout_width="106dp"
        android:layout_height="107dp"
        android:layout_marginStart="-41dp"
        android:layout_marginTop="-24dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="#4863F8"
        android:contentDescription="Back"
        android:paddingLeft="40dp"
        android:paddingTop="30dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

</androidx.constraintlayout.widget.ConstraintLayout>