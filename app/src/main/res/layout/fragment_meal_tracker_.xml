<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MealTracker_Fragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/mealtrackerbox"
                android:orientation="horizontal"
                android:padding="16dp"
                android:textAlignment="center">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Breakfast"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recommended 600-1000 calories"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnAddBreakfast_MT"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"

                        android:backgroundTint="#6d61da"
                        android:text="Add"
                        android:textColor="@android:color/white" />
                </LinearLayout>


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/brekkie" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"

                android:background="@drawable/mealtrackerbox"
                android:orientation="horizontal"
                android:padding="16dp">


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/lunch" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lunch"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recommended 500-800 calories"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnAddLunch_MT"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"

                        android:backgroundTint="#6d61da"
                        android:text="Add"
                        android:textColor="@android:color/white" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"

                android:background="@drawable/mealtrackerbox"
                android:orientation="horizontal"
                android:padding="16dp">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dinner"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recommended 600-1000 calories"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnAddDinner_MT"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#6d61da"
                        android:text="Add"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Add Button -->

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/dinnie" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>