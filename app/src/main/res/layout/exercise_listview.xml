<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="349dp"
        android:layout_height="120dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/exerciselistbox"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="278dp"
            android:layout_height="104dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblExerciseT"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:text="@string/listData2"
                android:textAlignment="center"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblExerciseTime"
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/listData"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center" />
            </LinearLayout>

            <Button
                android:id="@+id/btnGo_EL"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:text="@string/go"
                android:textColor="@color/black" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="67dp"
            android:layout_height="105dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/dumbell_icon" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>